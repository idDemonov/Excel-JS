{
  "compilerOptions": {
    "outDir": "./dist/script",
    "module": "es6",
    "sourceMap": true,
    "target": "es6",
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@core/*": ["src/core/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/node_modules/*", "tests"]
}
